@model IEnumerable<HTTP5101Assignment3.Models.Teacher>

@{
    ViewBag.Title = "Results";
}

<h2>Search Results</h2>

@if( Model == null || Model.Count() == 0 ) {
    <div><strong>There are no teachers that match that search criteria.</strong></div>
} else {
    <div>
    @foreach( var teacher in Model ) {

        <!-- Again, styling is an issue here.-->
        <div style="padding: 20px 0"><a href="/Teacher/Show/@teacher.teacherId"><strong>@teacher.firstName @teacher.lastName</strong></a>
        </div>
    }
    </div>
}

<div style="margin-top: 40px">
    <a href="/Teacher"><strong>Back to Main Page</strong></a>
</div>


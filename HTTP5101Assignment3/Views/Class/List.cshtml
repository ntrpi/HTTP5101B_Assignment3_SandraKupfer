@model IEnumerable<HTTP5101Assignment3.Models.Class>

@{
    ViewBag.Title = "List";
}

<h2>Classs</h2>
<h3>
    This page shows a list of all the classes in the database.
</h3>

@if( Model == null || Model.Count() == 0 ) {
    <div><strong>There are no classes in the database.</strong></div>
} else {
    <div>
        @foreach( var c in Model ) {
            <div>
                <a href="/Class/Show/@c.classId">@c.className</a>
            </div>
        }
    </div>
}

<div style="margin-top: 40px">
    <a href="/Assignment4"><strong>Back to Main Page</strong></a>
</div>

